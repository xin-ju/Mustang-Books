</div> --> 

<div class="card-body">
 <% @cart_items.each do |item| %>
 <% if item.book.assetlabel %>
     <hr class="solid">
    <%= link_to image_tag(item.book.assetlabel, height: 200), book_path(item.book_id)%><br></p> 
<%end%>
    <div class="container">
       <h2><%= link_to item.book.title, book_path(item.book_id)%></h2>
       <p>By <%= item.book.author %></p>
       <h5><%= item.book.genre %> | <%= number_to_currency(item.book.price)%> </h5>
    
    
        <%= form_for item, remote: true do |f| %>
           <%= f.hidden_field :book_id, :value => item.book.id %>
           <%= f.number_field :quantity, :value => item.quantity.to_i %>
           <%= f.submit "Update"%>
        <%= link_to "Remove Item(s)", cart_item_path(item), method: :delete, remote: true%> 
       <% end %>
      <p>Subtotal: <%= number_to_currency(item.total) %></p> 
    <br>
    </div>
 <% end %>
<div class="card-footer">

<h3>Your current cart value has a total of: <%= number_to_currency(current_cart.subtotal) %></h3> 

<% if current_cart.subtotal.zero? == false  %>
<%= link_to "Proceed to checkout", new_order_path ,class: "btn btn-block btn-primary"%><br> 
<%end%>