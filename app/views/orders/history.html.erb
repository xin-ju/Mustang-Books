<head>
<style>
img {
    float: left; padding-right: 50px;
}
h2 {text-align: center;}

.main {
    margin-right: 120px;
    font-size: 16px;
    padding: 20px 20px;
}
</style>
</head>
<body>

<div class="main">
<h2>Order History</h2>

<% current_user.orders.each do |order| %>
    
    <p>Items: </p>
    <ul>
        <% order.cart_items.each do |item| %>
        <% if item.book.assetlabel %>
        <%= link_to image_tag(item.book.assetlabel, height: 200), book_path(item.book_id)%><br>
        <%end%>
        <div class ="container">
            <h2><%= link_to item.book.title, book_path(item.book_id)%></h2>
            <p>By <%= item.book.author %></p>
            <h5><%= item.book.genre %> | <%= number_to_currency(item.book.price)%> </h5>
        </div>
        <% end %>
    </ul>
    ---------------------------------------------------------
<% end %>
