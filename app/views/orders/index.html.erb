<h2>All Orders</h2>


<!-- Only display orders of that user not all previous orders in the database (add User has order association) --> 
<% @orders.each do |order| %>
  <p>Name: <%= order.buyer_name %></p>
  <p>Credit Card Number: <%= order.credit_card_number %></p>
  <p>Exp. Date: <%= order.exp_date %></p>

  <p>Items: </p>  
  <ul>
    <% order.cart_items.each do|item|%> 
    <%= link_to image_tag(item.book.assetlabel, height: 200), book_path(item.book_id)%><br>
    <div class="container">
       <h2><%= link_to item.book.title, book_path(item.book_id)%></h2>
       <p>By <%= item.book.author %></p>
       <h5><%= item.book.genre %> | <%= number_to_currency(item.book.price)%> </h5>
    <!-- <li>Item Price: <%=item.total %></li> --> 
    </div>
    <% end %> 
  </ul> 
  -----------------------------------------------------
<% end %>